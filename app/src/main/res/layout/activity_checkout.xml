<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CheckoutActivity">

    <TextView
            android:text="Havana Bar n Restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_checkoutNameofRestaurant" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:textSize="16sp"
            android:textColor="@android:color/black" android:textStyle="bold"/>
    <TextView
            android:text="Nygatan 20 24232 Horby, Sweden"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_checkoutAddress" android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_checkoutNameofRestaurant" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"/>
    <TextView
            android:text="Order Item List"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_checkoutAddress"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="461dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/imageView8"
            android:layout_marginTop="4dp" android:id="@+id/recyclerView"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="5dp" app:srcCompat="@color/colorAccent"
            android:id="@+id/imageView8" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textView15"
            android:layout_marginTop="4dp"/>
    <Button
            android:text="PLACE AN ORDER NOW"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_checkoutPlaceAnOrder"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"
            android:textColor="@android:color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>