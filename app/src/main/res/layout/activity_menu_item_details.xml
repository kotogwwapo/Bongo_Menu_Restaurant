<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuItemDetailsActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp" app:srcCompat="@color/colorPrimary"
            android:id="@+id/imageView_menuItemDetailsImage"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="Vegetable Salad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_menuItemDetailsNameofItem" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView_menuItemDetailsImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@android:color/black" android:textStyle="bold" android:textSize="20sp"/>
    <TextView
            android:text="Price"
            android:layout_height="wrap_content"
            android:id="@+id/textView_menuItemDetailsPriceofItem"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_menuItemDetailsNameofItem"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp" android:textSize="18sp" android:layout_width="0dp"/>
    <ImageView
            android:layout_width="45dp"
            android:layout_height="34dp" app:srcCompat="@drawable/ic_favorite_border_black_24dp"
            android:id="@+id/imageView_menuItemDetailsFavorite"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_menuItemDetailsNameofItem"
            android:layout_marginStart="28dp"/>
    <TextView
            android:text="Menu Details and Nutrition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="@android:color/black" android:layout_marginTop="108dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_menuItemDetailsNameofItem"
            app:layout_constraintHorizontal_bias="0.497" android:textSize="16sp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="5dp" app:srcCompat="@color/colorPrimaryDark"
            android:id="@+id/imageView6"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10" android:layout_marginTop="4dp"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="143dp"
            android:background="@drawable/edit_textbox_style1"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" android:id="@+id/scrollView2"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:textColor="#000"
                      android:layout_marginStart="5sp"
                      android:text="Broccoli salad. Corn salads.Tomato salads.Broccoli salad. Corn salads.Tomato salads.Broccoli salad. Corn salads.Tomato salads.Broccoli salad. Corn salads.Tomato salads.Broccoli salad. Corn salads.Tomato salads.Broccoli salad. Corn salads.Tomato salads.Broccoli salad. Corn salads.Tomato salads.Broccoli salad. Corn salads.Tomato salads.Broccoli salad. Corn salads.Tomato salads.Broccoli salad. Corn salads.Tomato salads.Broccoli salad. Corn salads.Tomato salads. "
                      android:id="@+id/textView_menuItemDetailsandNutrition" android:textSize="17sp"/>
        </LinearLayout>
    </ScrollView>
    <Button
            android:text="Customize your order"
            android:layout_width="274dp"
            android:layout_height="60dp"
            android:id="@+id/button_menuItemDetailsCustomizeOrder" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark" app:layout_constraintHorizontal_bias="0.532"/>
    <Button
            android:text="Add To Cart"
            android:layout_width="274dp"
            android:layout_height="60dp"
            android:id="@+id/button_menuItemDetailsAddToCart"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button_menuItemDetailsCustomizeOrder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark" app:layout_constraintHorizontal_bias="0.532"/>


</androidx.constraintlayout.widget.ConstraintLayout>