<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".YourCartActivity">

    <ImageView
            android:layout_width="434dp"
            android:layout_height="5dp" app:srcCompat="@color/buttonGreen"
            android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.487" app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:layout_marginTop="16dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="415dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/recyclerView_yourCartRecycler"/>
    <ImageView
            android:layout_width="434dp"
            android:layout_height="5dp" app:srcCompat="@color/buttonGreen"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView_yourCartRecycler"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.512" android:layout_marginTop="4dp"/>
    <TextView
            android:text="Items :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginTop="28dp"
            android:textStyle="bold" android:textSize="16sp" android:textColor="@android:color/black"/>
    <TextView
            android:text="1"
            android:background="@color/pink"
            android:layout_width="36dp"
            android:layout_height="22dp"
            android:id="@+id/textView_yourCartNumberofItems" app:layout_constraintStart_toEndOf="@+id/textView9"
            android:layout_marginStart="20dp" app:layout_constraintTop_toBottomOf="@+id/imageView3"
            android:layout_marginTop="28dp" android:textSize="16sp" android:textAlignment="center"
            android:textColor="@android:color/white"/>
    <TextView
            android:text="Subtotal: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12" app:layout_constraintStart_toEndOf="@+id/textView_yourCartNumberofItems"
            android:layout_marginStart="72dp" app:layout_constraintTop_toBottomOf="@+id/imageView3"
            android:layout_marginTop="28dp" android:textSize="16sp" android:textStyle="bold"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_yourCartSubtotalPrice" app:layout_constraintStart_toEndOf="@+id/textView12"
            android:layout_marginStart="32dp" app:layout_constraintTop_toBottomOf="@+id/imageView3"
            android:layout_marginTop="28dp" android:textSize="16sp" android:textStyle="bold"
            android:textColor="@android:color/black"/>
    <Button
            android:text="Back To Menu"
            android:layout_width="196dp"
            android:layout_height="60dp"
            android:id="@+id/button_yourCartBacktoMenu" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorPrimaryDark"/>
    <Button
            android:text="CheckOut"
            android:layout_width="196dp"
            android:layout_height="60dp"
            android:id="@+id/button_yourCartCheckout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorPrimaryDark"/>
</androidx.constraintlayout.widget.ConstraintLayout>