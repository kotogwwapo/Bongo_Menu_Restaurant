<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="170dp"
                                   android:layout_height="200dp"
                                   android:id="@+id/parentLayout_Item"
                                   xmlns:cardview="http://schemas.android.com/apk/res-auto"
                                   android:layout_margin="5dp"
>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:id="@+id/parentLayout_ItemLinear">

        <ImageView
                android:id="@+id/cardviewItem_imageItem"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                cardview:srcCompat="@mipmap/ic_launcher_round"/>

        <TextView
                android:id="@+id/cardviewItem_itemName"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="0dp"
                android:text="TextView" android:textSize="24sp" android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>