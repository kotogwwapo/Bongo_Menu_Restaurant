<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:cardview="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/parentLayout_Item"
                                                   android:layout_margin="5dp"
>


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" cardview:layout_constraintTop_toTopOf="parent"
            cardview:layout_constraintEnd_toEndOf="parent" cardview:layout_constraintBottom_toBottomOf="parent"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:cardBackgroundColor="@drawable/edit_textbox_style1">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" android:id="@+id/parentLayout_ItemLinear">

            <TextView
                    android:text="Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_yourCartSubtotalPrice"
                    android:textSize="16sp" android:textStyle="bold"
                    android:textColor="@android:color/black"
                    cardview:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="56dp" cardview:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="8dp" cardview:layout_constraintBottom_toBottomOf="parent"
                    cardview:layout_constraintVertical_bias="0.0" android:layout_marginTop="20dp"/>
            <TextView
                    android:text="Subtotal: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:textSize="16sp" android:textStyle="bold"
                    android:textColor="@android:color/black"
                    cardview:layout_constraintTop_toTopOf="parent"
                    cardview:layout_constraintStart_toEndOf="@+id/textView_yourCartNumberofItems"
                    android:layout_marginStart="88dp" android:layout_marginBottom="8dp"
                    cardview:layout_constraintBottom_toBottomOf="parent" cardview:layout_constraintVertical_bias="0.0"
                    android:layout_marginTop="20dp"/>
            <TextView
                    android:text="1"
                    android:background="@color/pink"
                    android:layout_width="36dp"
                    android:layout_height="22dp"
                    android:id="@+id/textView_yourCartNumberofItems"
                    android:textSize="16sp" android:textAlignment="center"
                    android:textColor="@android:color/white"
                    cardview:layout_constraintTop_toTopOf="parent"
                    cardview:layout_constraintStart_toEndOf="@+id/textView9" android:layout_marginStart="16dp"
                    android:layout_marginBottom="8dp" cardview:layout_constraintBottom_toBottomOf="parent"
                    cardview:layout_constraintVertical_bias="0.0" android:layout_marginTop="20dp"/>
            <TextView
                    android:text="Items :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:textStyle="bold" android:textSize="16sp" android:textColor="@android:color/black"
                    android:layout_marginStart="16dp"
                    cardview:layout_constraintStart_toStartOf="parent"
                    cardview:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>